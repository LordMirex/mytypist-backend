# MyTypist Backend Environment Configuration
# Copy this file to .env and update the values

# Application Settings
DEBUG=true
APP_NAME=MyTypist
APP_VERSION=1.0.0

# Security
SECRET_KEY=your-super-secret-key-change-this-for-production
JWT_SECRET_KEY=dev-jwt-secret-key-32-characters-minimum

# Database
DATABASE_URL=postgresql://mytypist:mytypist123@localhost:5433/mytypistdb
POSTGRES_USER=mytypist
POSTGRES_PASSWORD=mytypist123
POSTGRES_DB=mytypistdb

# Redis (Optional for development)
REDIS_HOST=localhost
REDIS_PORT=6000
REDIS_PASSWORD=1234
REDIS_URL=redis://:1234@localhost:6000
REDIS_ENABLED=true

# Celery
CELERY_BROKER_URL=redis://:1234@localhost:6000
CELERY_RESULT_BACKEND=redis://:1234@localhost:6000

# File Storage
STORAGE_PATH=./storage
TEMPLATES_PATH=./storage/templates
DOCUMENTS_PATH=./storage/documents
SIGNATURES_PATH=./storage/signatures
UPLOADS_PATH=./storage/uploads
QUARANTINE_PATH=./storage/quarantine
THUMBNAILS_PATH=./storage/thumbnails

# File Processing
MAX_FILE_SIZE=104857600
ENABLE_SYNC_THUMBNAILS=false

# Performance
CACHE_TTL=3600
TEMPLATE_CACHE_TTL=86400
DOCUMENT_GENERATION_TIMEOUT=30
MAX_CONCURRENT_UPLOADS=10
COMPRESSION_THRESHOLD=1024
SLOW_REQUEST_THRESHOLD=1.0
ENCRYPTION_ENABLED=true

# Database Performance
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security
ALLOWED_HOSTS=*
ALLOWED_ORIGINS=*

# Flutterwave Payment Integration
FLUTTERWAVE_PUBLIC_KEY=your-public-key
FLUTTERWAVE_SECRET_KEY=your-secret-key
FLUTTERWAVE_BASE_URL=https://api.flutterwave.com/api
FLUTTERWAVE_WEBHOOK_SECRET=your-webhook-secret

# Email Settings
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@mytypist.com
SENDGRID_FROM_NAME=MyTypist

# Frontend
FRONTEND_URL=https://mytypist.com

# Legacy SMTP (Backup)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@mytypist.com

# Compliance
GDPR_ENABLED=true
SOC2_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555

# Subscription Plans
FREE_PLAN_DOCUMENTS_PER_MONTH=5
BASIC_PLAN_DOCUMENTS_PER_MONTH=100
PRO_PLAN_DOCUMENTS_PER_MONTH=1000
ENTERPRISE_PLAN_DOCUMENTS_PER_MONTH=-1

# Development Settings
SKIP_DB_TABLE_CREATION=false
